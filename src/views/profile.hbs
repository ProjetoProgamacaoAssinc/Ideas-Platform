<div class="row">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-header bg-light text-center">
        <i class="fas fa-user-circle fa-5x text-secondary my-3"></i>
        <h3 class="mb-0">{{user.name}}</h3>
      </div>
      <div class="card-body">
        <p><strong>Email:</strong> {{user.email}}</p>
        {{!-- <p><strong>Departamento:</strong> (Informação adicional)</p> --}}
        <a href="#" class="btn btn-outline-secondary w-100 disabled" aria-disabled="true">Editar Perfil (Em breve)</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <h2>Minhas Ideias Enviadas</h2>
    <hr>
    
    {{#if ideas}}
      <ul class="list-group list-group-flush shadow-sm">
        {{#each ideas}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1">{{title}}</h5>
              <small class="text-success"><i class="fas fa-vote-yea"></i> {{votes.length}} Votos</small>
            </div>
            <div>
              <a href="/ideas/{{_id}}" class="btn btn-outline-primary btn-sm"><i class="fas fa-eye"></i> Ver</a>
              <a href="/ideas/edit/{{_id}}" class="btn btn-outline-warning btn-sm ms-1"><i class="fas fa-edit"></i> Editar</a>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <div class="alert alert-info">
        Você ainda não enviou nenhuma ideia. <a href="/ideas/new">Que tal enviar sua primeira?</a>
      </div>
    {{/if}}
  </div>
</div>