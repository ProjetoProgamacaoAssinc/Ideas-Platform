<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-5">{{title}}</h1>
  {{#if user}}
    <a href="/ideas/new" class="btn btn-primary btn-lg">
      <i class="fas fa-plus-circle"></i> Enviar Nova Ideia
    </a>
  {{/if}}
</div>

<form action="/ideas" method="GET" class="row mb-4 align-items-center">
  <div class="col-md-4">
    <label for="category" class="form-label fw-bold">Filtrar por Categoria:</label>
    <select class="form-select" id="category" name="category" onchange="this.form.submit()">
      <option value="" {{#unless category}}selected{{/unless}}>Todas as Categorias</option>
      <option value="Inovação" {{#ifeq category "Inovação"}}selected{{/ifeq}}>Inovação</option>
      <option value="Processos" {{#ifeq category "Processos"}}selected{{/ifeq}}>Processos</option>
      <option value="RH" {{#ifeq category "RH"}}selected{{/ifeq}}>Recursos Humanos</option>
      <option value="Tecnologia" {{#ifeq category "Tecnologia"}}selected{{/ifeq}}>Tecnologia</option>
      <option value="Marketing" {{#ifeq category "Marketing"}}selected{{/ifeq}}>Marketing</option>
      <option value="Outros" {{#ifeq category "Outros"}}selected{{/ifeq}}>Outros</option>
    </select>
  </div>
  {{#if category}}
    <div class="col-md-auto mt-3 mt-md-0">
      <a href="/ideas" class="btn btn-outline-secondary">Limpar Filtro</a>
    </div>
  {{/if}}
</form>

<hr>

<div class="row">
  {{#each ideas}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm idea-card">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.title}}</h5>
          <span class="badge bg-secondary mb-2 align-self-start">{{this.category}}</span>
          <p class="card-text flex-grow-1">{{this.description}}</p>
          <p class="text-muted mb-2">Status: {{this.status}}</p>
          <a href="/ideas/{{this._id}}" class="btn btn-outline-primary btn-sm mt-auto">Ver Detalhes</a>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center bg-light">
          <span class="fw-bold text-success">
            <i class="fas fa-vote-yea"></i> {{this.votes.length}} Votos
          </span>

          {{#if ../user}}
            {{#unlessIncludes this.votes ../user._id}}
              <form action="/ideas/vote/{{this._id}}" method="POST" class="d-inline">
                <button type="submit" class="btn btn-success btn-sm">
                  <i class="fas fa-thumbs-up"></i> Votar
                </button>
              </form>
            {{else}}
              <button class="btn btn-success btn-sm" disabled>
                <i class="fas fa-check"></i> Já votou
              </button>
            {{/unlessIncludes}}
          {{/if}}


        </div>
      </div>
    </div>
  {{else}}
    <div class="col-12">
      <div class="alert alert-info text-center" role="alert">
        Nenhuma ideia foi cadastrada ainda. Seja o primeiro!
      </div>
    </div>
  {{/each}}
</div>
