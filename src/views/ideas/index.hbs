<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-5">{{title}}</h1>
  {{#if user}}
    <a href="/ideas/new" class="btn btn-primary btn-lg">
      <i class="fas fa-plus-circle"></i> Enviar Nova Ideia
    </a>
  {{/if}}
</div>

<form id="filtersForm" action="/ideas" method="GET" class="row mb-4 align-items-center">

  <!-- Categoria -->
  <div class="col-md-4">
    <label for="category" class="form-label fw-bold">Categoria:</label>
    <select class="form-select" id="category" name="category">
      <option value="" {{#unless category}}selected{{/unless}}>Todas</option>
      <option value="Inovação" {{#ifEquals category "Inovação"}}selected{{/ifEquals}}>Inovação</option>
      <option value="Processos" {{#ifEquals category "Processos"}}selected{{/ifEquals}}>Processos</option>
      <option value="RH" {{#ifEquals category "RH"}}selected{{/ifEquals}}>Recursos Humanos</option>
      <option value="Tecnologia" {{#ifEquals category "Tecnologia"}}selected{{/ifEquals}}>Tecnologia</option>
      <option value="Marketing" {{#ifEquals category "Marketing"}}selected{{/ifEquals}}>Marketing</option>
      <option value="Outros" {{#ifEquals category "Outros"}}selected{{/ifEquals}}>Outros</option>
    </select>
  </div>

  <!-- Status -->
  <div class="col-md-4">
    <label for="status" class="form-label fw-bold">Status:</label>
    <select class="form-select" id="status" name="status">
      <option value="" {{#unless status}}selected{{/unless}}>Todos</option>
      <option value="Pendente" {{#ifEquals status "Pendente"}}selected{{/ifEquals}}>Pendente</option>
      <option value="Aprovada" {{#ifEquals status "Aprovada"}}selected{{/ifEquals}}>Aprovada</option>
      <option value="Recusada" {{#ifEquals status "Recusada"}}selected{{/ifEquals}}>Recusada</option>
    </select>
  </div>

  <!-- Data -->
  <div class="col-md-4">
    <label for="date" class="form-label fw-bold">Data:</label>
    <select class="form-select" id="date" name="date">
      <option value="" {{#unless date}}selected{{/unless}}>Todas</option>
      <option value="today" {{#ifEquals date "today"}}selected{{/ifEquals}}>Hoje</option>
      <option value="week" {{#ifEquals date "week"}}selected{{/ifEquals}}>Últimos 7 dias</option>
      <option value="month" {{#ifEquals date "month"}}selected{{/ifEquals}}>Últimos 30 dias</option>
    </select>
  </div>

  <!-- Botão limpar -->
  {{#if (or category status date)}}
  <div class="col-12 mt-3">
    <a href="/ideas" class="btn btn-outline-secondary">Limpar Filtros</a>
  </div>
  {{/if}}
</form>

<hr>

<div class="row">
  {{#each ideas}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm idea-card 
        {{#if (eq this.status "Aprovada")}}border border-warning{{/if}}">
        
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.title}}</h5>
          <span class="badge bg-secondary mb-2 align-self-start">{{this.category}}</span>
          <p class="card-text flex-grow-1">{{this.description}}</p>
          <p class="card-text">{{this.date}}</p>
          <p class="text-muted mb-2">Status: {{this.status}}</p>
          <a href="/ideas/{{this._id}}" class="btn btn-outline-primary btn-sm mt-auto">Ver Detalhes</a>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center bg-light">
          <span class="fw-bold text-success">
            <i class="fas fa-vote-yea"></i> {{this.votes.length}} Votos
          </span>

          {{#if ../user}}
            {{#if (eq this.status "Aprovada")}}
              <button class="btn btn-secondary btn-sm" disabled>
                <i class="fas fa-check"></i> Aprovada
              </button>
            {{else}}
              {{#unlessIncludes this.votes ../user._id}}
                <form action="/ideas/vote/{{this._id}}" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-success btn-sm">
                    <i class="fas fa-thumbs-up"></i> Votar
                  </button>
                </form>
              {{else}}
              <form action="/ideas/vote/unvote/{{this._id}}" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning btn-sm">
                  <i class="fas fa-undo"></i> Retirar voto
                </button>
              </form>


              {{/unlessIncludes}}

            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
  {{else}}
    <div class="col-12">
      <div class="alert alert-info text-center" role="alert">
        Nenhuma ideia foi cadastrada ainda. Seja o primeiro!
      </div>
    </div>
  {{/each}}
</div>
<script src="/js/filter.js"></script>
