<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-5">Ideias em Destaque</h1>
  {{#if user}}
    <a href="/ideas/new" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Enviar Nova Ideia</a>
  {{/if}}
</div>

<hr>

<div class="row">
  {{#each ideas}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm idea-card">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{title}}</h5>
          <span class="badge bg-secondary mb-2 align-self-start">{{category}}</span>
          <p class="card-text flex-grow-1">{{description}}</p>
          <a href="/ideas/{{_id}}" class="btn btn-outline-primary btn-sm mt-auto">Ver Detalhes</a>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center bg-light">
          <span class="fw-bold text-success">
            <i class="fas fa-vote-yea"></i> {{votes.length}} Votos
          </span>
          
          {{!-- Assumindo que 'user' está disponível no escopo global e _id é do MongoDB --}}
          {{#if ../user}}
            <form action="/ideas/vote/{{_id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-thumbs-up"></i> Votar</button>
            </form>
          {{/if}}
        </div>
      </div>
    </div>
  {{else}}
    <div class="col-12">
      <div class="alert alert-info text-center" role="alert">
        Nenhuma ideia foi cadastrada ainda. Seja o primeiro!
      </div>
    </div>
  {{/each}}
</div>